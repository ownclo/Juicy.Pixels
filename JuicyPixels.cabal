Name:                JuicyPixels
Version:             3.1.2
Synopsis:            Picture loading/serialization (in png, jpeg, bitmap, gif, tiff and radiance)
Description:
    <<data:image/png;base64,>>
    .
    This library can load and store images in PNG,Bitmap, Jpeg, Radiance, Tiff and read Gif images.

homepage:            https://github.com/Twinside/Juicy.Pixels
License:             BSD3
License-file:        LICENSE
Author:              Vincent Berthoux
Maintainer:          vincent.berthoux@gmail.com
Category:            Codec, Graphics
Build-type:          Simple

-- Constraint on the version of Cabal needed to build this package.
Cabal-version:       >= 1.16

Extra-source-files: changelog

Source-Repository head
    Type:      git
    Location:  git://github.com/Twinside/Juicy.Pixels.git

Source-Repository this
    Type:      git
    Location:  git://github.com/Twinside/Juicy.Pixels.git
    Tag:       v3.1.2

Flag Mmap
    Description: Enable the file loading via mmap (memory map)
    Default: False

Executable imageTest
  Default-Language: Haskell2010
  Hs-Source-Dirs: exec-src
  Main-Is: main.hs
  Ghc-options: -O3 -Wall
  -- -O3 -Wall 
  -- 
  -- -ddump-simpl
  -- 
  -- -cpp -prof -auto-all -rtsopts -caf-all -fforce-recomp
  Build-depends: JuicyPixels,
                 base                >= 4       && < 5,
                 bytestring          >= 0.9     && < 0.11,
                 filepath            >= 1.3     && < 1.4,
                 criterion           >= 0.6.2   && < 0.7

  if flag(Mmap)
    Build-depends: mmap
    CC-Options: "-DWITH_MMAP_BYTESTRING"

Executable jpgDecoder
  Default-Language: Haskell2010
  Hs-Source-Dirs: exec-src
  Main-Is: decoder.hs
  Ghc-options: -O3 -Wall
  Build-depends: JuicyPixels,
                 base,
                 bytestring

Executable jpgEncoder
  Default-Language: Haskell2010
  Hs-Source-Dirs: exec-src
  Main-Is: encoder.hs
  Ghc-options: -O3 -Wall
  Build-depends: JuicyPixels,
                 base,
                 bytestring


Library
  Default-Language: Haskell2010
  Exposed-modules:  Codec.Picture,
                    Codec.Picture.Bitmap,
                    Codec.Picture.Jpg,
                    Codec.Picture.Saving,
                    Codec.Picture.Types

  Ghc-options: -O3 -Wall
  Build-depends: base                >= 4       && < 5,
                 bytestring          >= 0.9     && < 0.11,
                 mtl                 >= 1.1     && < 2.2,
                 binary              >= 0.6.4.0 && < 0.8,
                 transformers        >= 0.2.2   && < 0.4,
                 vector              >= 0.9     && < 0.11,
                 primitive           >= 0.5     && < 0.6,
                 deepseq             >= 1.1     && < 1.4,
                 containers          >= 0.4     && < 0.6,
                 attoparsec          >= 0.9     && < 0.11,
                 lens                >= 3.9     && < 3.11

  if flag(Mmap)
    Build-depends: mmap
    CC-Options: "-DWITH_MMAP_BYTESTRING"

  -- Modules not exported by this package.
  Other-modules: Codec.Picture.Jpg.DefaultTable,
                 Codec.Picture.Jpg.FastIdct,
                 Codec.Picture.Jpg.FastDct,
                 Codec.Picture.Jpg.Types,
                 Codec.Picture.Jpg.Common,
                 Codec.Picture.BitWriter,
                 Codec.Picture.InternalHelper,

                 Codec.Picture.Jpg.Huffman,
                 Codec.Picture.Jpg.Env,
                 Codec.Picture.Jpg.Parser,
                 Codec.Picture.Jpg.Printer,
                 Codec.Picture.Jpg.EnvReader

  Include-Dirs: Codec/Picture

